/*****************************************************************************/
/* Redirect: Style */
/*****************************************************************************/
.redirect {
  text-align: center;
  background-color: rgba(242, 242, 242, 0.8);
  padding: 20px;
}

.redirect_title {
  font-size: 2em;
}

@media screen and (max-width: 310px) { // col-sm-5
  .redirect {
    padding: 10px;
  }
  .redirect_title {
    font-size: 1.5em;
    margin-top: 10px;
  }
}

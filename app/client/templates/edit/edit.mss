/*****************************************************************************/
/* Edit: Style */
/*****************************************************************************/
.edit {
}

.title {
  margin: 0;
}

.content {
  margin-top: 20px;
}

.container {
  padding: 7px;
  background-color: #ffcdab;
  border-radius: 5px;
  height: 100%;
}

.panel {
  padding: 0;
}

.editor {
}

.champion {
  padding: 4px;
  height: 111px;
}

.champSelect {
  height: 100%;
}

.champion .champImage {
  padding: 0 7px 0 0;
  height: 100%;
}
.champion .champImage img {
  max-height: 100%;
}

.champion .selectBox {
  padding: 0;
}

.filters {
  padding: 4px;
  height: 111px;
}

.filters .sort {
  padding: 0;
}

.filters .tags {
  padding: 0;
}

.rolesContainer {
  padding: 4px;
  list-style-type: none;
  font-weight: bold;
  text-transform: uppercase;
}

.roles {
  margin: 0;
  padding: 0;
}

.roleContainer {
  display: inline-block;
  margin: 0 15px;
}

.role {
  cursor: pointer;
}

.itemsList {
  max-height: 70vh;
  overflow-y: scroll;
  padding: 3px;
}

.itemsContainer {
  padding: 0;
  list-style-type: none;
}

.itemContainer {
  display: inline-block;
  padding: 0;
}

.itemsList_item {
}

.itemSet {
  padding: 4px;
  height: 100%;
}

.itemSet_itemsList {
  padding: 0;
  list-style-type: none;
}

.itemSet_itemBlock {
}

.itemSet_blockDescription {
  font-weight: bold;
  width: 100%;
  height: 26px;
}

.itemSet_items {
  padding: 0;
  list-style-type: none;
}

.itemSet_itemContainer {
  float: left;
  padding: 2px 0;
}

.itemSet_item {
}
